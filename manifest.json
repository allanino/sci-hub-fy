{
  "manifest_version": 2,

  "name": "Sci-Hub-Fy",
  "description": "Free access to scientific articles through sci-hub.io service.",
  "version": "1.0",

  "permissions": [
     "activeTab",
     "tabs"
  ],

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}