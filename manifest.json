{
  "manifest_version": 3,

  "name": "Sci-Hub-Fy",
  "description": "Free access to scientific articles through Sci-Hub service.",
  "version": "2.0.0",

  "permissions": [
     "activeTab",
     "tabs",
     "contextMenus",
     "storage"
  ],

  "icons": {
    "19": "img/icon.png",
    "128": "img/icon_store.png"
  },

  "action": {
    "default_icon": "img/icon.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
